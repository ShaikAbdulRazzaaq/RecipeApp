<resources>

    <style name="Base.Theme.RecipeApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorSecondary">@color/burnt_sienna</item>
        <item name="colorAccent">@color/jungle_green</item>
        <item name="colorPrimary">@color/japanese_indigo</item>
    </style>

    <style name="Theme.RecipeApp" parent="Base.Theme.RecipeApp" />

    <style name="ToolbarTextAppearance" parent="Widget.Material3.Toolbar">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomNavTextAppearance" parent="Widget.Material3.BottomNavigationView">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="customChipStyle" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/chip_text_color</item>
        <item name="chipStrokeColor">@color/chip_background_color</item>
    </style>
</resources>